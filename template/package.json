{
  "name": "WebgevMobile",
  "version": "0.0.1",
  "private": true,
  "author": "Webgev <webgev@gmail.com>",
  "scripts": {
    "android": "ENVFILE=.env react-native run-android",
    "ios": "ENVFILE=.env react-native run-ios ",
    "start": "react-native start",
    "pod": "npx pod-install",
    "test": "jest",
    "lint": "eslint .",
    "ts:check": "tsc --watch",
    "ts:check:ci": "tsc",
    "extract:lang": "node tools/i18n/extractMessages.js > src/lib/translate/translates/en.json",
    "lang:sort:ru": "node tools/i18n/sortFile.js src/lib/translate/translates/ru.json",
    "lang:sort:en": "node tools/i18n/sortFile.js src/lib/translate/translates/en.json",
    "gen": "graphql-codegen --config codegen.yml",
    "apk": "ENVFILE=.env react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle && cd ./android && ./gradlew app:assembleRelease",
    "aab": "ENVFILE=.env react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle && cd ./android && ./gradlew app:bundleRelease"
  },
  "dependencies": {
    "@apollo/client": "^3.6.6",
    "@formatjs/intl-locale": "^2.4.47",
    "@formatjs/intl-pluralrules": "^4.3.3",
    "@react-native-async-storage/async-storage": "^1.17.10",
    "@react-navigation/bottom-tabs": "^6.3.3",
    "@react-navigation/native": "^6.0.12",
    "@react-navigation/native-stack": "^6.8.0",
    "@sentry/react-native": "^4.1.0",
    "@types/react": "^18.0.12",
    "@types/react-native": "^0.67.8",
    "@webgev/react-native-config": "^0.2.0",
    "@webgev/react-native-size": "^0.2.2",
    "apollo3-cache-persist": "^0.14.0",
    "date-fns": "^2.28.0",
    "dayjs": "^1.11.3",
    "formik": "^2.2.9",
    "fuse.js": "^6.6.2",
    "graphql": "^16.5.0",
    "lodash": "^4.17.21",
    "native-base": "^3.4.6",
    "react": "18.1.0",
    "react-intl": "^6.0.4",
    "react-native": "0.70.0",
    "react-native-bootsplash": "^4.3.2",
    "react-native-config": "^1.4.6",
    "react-native-device-info": "^10.1.2",
    "react-native-fast-image": "^8.6.1",
    "react-native-flash-message": "^0.3.1",
    "react-native-localize": "^2.2.3",
    "react-native-safe-area-context": "^4.3.3",
    "react-native-screens": "^3.17.0",
    "react-native-secure-key-store": "^2.0.10",
    "react-native-svg": "^13.1.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript-operations": "^2.4.1",
    "@graphql-codegen/typescript-react-apollo": "^3.2.15",
    "@sentry/types": "^7.5.1",
    "@types/lodash": "^4.14.182",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.72.1",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.1.0",
    "typescript": "^4.6.3"
  },
  "jest": {
    "preset": "react-native"
  }
}
