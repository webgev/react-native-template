{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"]
    }
  },

  "include": ["src/**/*", "__tests__", ".eslintrc.js", "**/*.js"],
  "exclude": [
    "dist",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
